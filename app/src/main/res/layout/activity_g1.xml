<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".G1"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Delaying of implementation of the SNL technology drained the countryâ€™s food storage and starvation is starting to be seen in people. However, the research on potential problems is yet to fully complete. Doctor Tan reported that the team is able to find a way to mass produce crops using SNL. This significantly reduces the cost of producing SNL. However Doctor Tan proposed that the team needs another 5 years to test on the SNL produced food."
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintVertical_bias="0.45"
